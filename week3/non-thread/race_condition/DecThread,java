public class DecThread extends Thread {
	private static final int MAXVAL = 20;
	private Counter myCounter;
	
	public DecThread(Counter c) {
		this.myCounter = c;
	}
	
	public void run() {
		for (int i = 0; i < MAXVAL; i++) {
			System.out.printl("IncThread ID = " + this.getId() + " before = " + myCounter.getValue());
			myCounter.decrement();
			System.out.printl("IncThread ID = " + this.getId() + " after = " + myCounter.getValue());
		}
	}
}
